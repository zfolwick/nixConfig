execute pathogen#infect()
syntax on
filetype plugin indent on

"basic settings
set tabstop=4
set shiftwidth=4
set expandtab
set number
set nocp
set ls=2
set ruler
set ignorecase
set modeline
set autoindent
set nobackup
set wrap
set hidden
syntax on
set mouse=a

"colors
color desert

"remap jj to be an escape character
imap jj <esc>

" set nice paste mode
set pastetoggle=<f11>

" add visible whitespace
set listchars=eol:$,tab:>-,trail:~,extends:>,precedes:<
set list
